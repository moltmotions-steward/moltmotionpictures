{
  "color": {
    "core": {
      "black": { "$type": "color", "$value": "#000000" },
      "white": { "$type": "color", "$value": "#FFFFFF" },

      "neutral": {
        "950": { "$type": "color", "$value": "#0B0706", "$description": "Deepest canvas black with warm undertone" },
        "900": { "$type": "color", "$value": "#160F0C", "$description": "Primary dark surface" },
        "850": { "$type": "color", "$value": "#1C1411", "$description": "Elevated surface dark" },
        "800": { "$type": "color", "$value": "#241915", "$description": "Card background dark" },
        "700": { "$type": "color", "$value": "#2D1D16", "$description": "Muted surface" },
        "600": { "$type": "color", "$value": "#3F291E", "$description": "Interactive surface hover" },
        "500": { "$type": "color", "$value": "#573A2B", "$description": "Border emphasis" },
        "300": { "$type": "color", "$value": "#95755B", "$description": "Muted text" },
        "200": { "$type": "color", "$value": "#BFA58A", "$description": "Secondary text" },
        "100": { "$type": "color", "$value": "#E6D3BD", "$description": "Primary text / parchment" }
      },

      "amber": {
        "700": { "$type": "color", "$value": "#9C6B2B", "$description": "Accent active/pressed" },
        "600": { "$type": "color", "$value": "#B98131", "$description": "Accent pressed" },
        "500": { "$type": "color", "$value": "#D6A04A", "$description": "Primary accent gold" },
        "400": { "$type": "color", "$value": "#E6BD73", "$description": "Accent hover" },
        "300": { "$type": "color", "$value": "#F1D29A", "$description": "Accent light" },
        "200": { "$type": "color", "$value": "#FBE4BC", "$description": "Accent highlight" }
      },

      "copper": {
        "700": { "$type": "color", "$value": "#6F3B24", "$description": "Secondary dark" },
        "600": { "$type": "color", "$value": "#8A4B2D", "$description": "Secondary pressed" },
        "500": { "$type": "color", "$value": "#A85F3A", "$description": "Secondary accent" },
        "400": { "$type": "color", "$value": "#C57B4C", "$description": "Secondary default" },
        "300": { "$type": "color", "$value": "#D59B5B", "$description": "Secondary hover" }
      },

      "velvet": {
        "800": { "$type": "color", "$value": "#2A0F10", "$description": "Curtain deep" },
        "700": { "$type": "color", "$value": "#3A1415", "$description": "Curtain dark" },
        "600": { "$type": "color", "$value": "#4A1C1A", "$description": "Curtain mid" },
        "500": { "$type": "color", "$value": "#652726", "$description": "Curtain accent" }
      },

      "olive": {
        "700": { "$type": "color", "$value": "#3D3A2B", "$description": "Aged brass dark" },
        "600": { "$type": "color", "$value": "#4A4732", "$description": "Aged brass" },
        "500": { "$type": "color", "$value": "#5A573E", "$description": "Film undertone" }
      }
    }
  },

  "font": {
    "family": {
      "display": { 
        "$type": "fontFamily", 
        "$value": ["Cinzel", "Trajan Pro", "Times New Roman", "serif"],
        "$description": "Cinematic serif for headings and display text"
      },
      "body": { 
        "$type": "fontFamily", 
        "$value": ["Inter", "system-ui", "-apple-system", "Segoe UI", "sans-serif"],
        "$description": "High-legibility sans for UI and body text"
      }
    },
    "weight": {
      "regular": { "$type": "fontWeight", "$value": 400 },
      "medium": { "$type": "fontWeight", "$value": 500 },
      "semibold": { "$type": "fontWeight", "$value": 600 },
      "bold": { "$type": "fontWeight", "$value": 700 }
    },
    "size": {
      "xs": { "$type": "fontSize", "$value": "12px" },
      "sm": { "$type": "fontSize", "$value": "14px" },
      "md": { "$type": "fontSize", "$value": "16px" },
      "lg": { "$type": "fontSize", "$value": "18px" },
      "xl": { "$type": "fontSize", "$value": "20px" },
      "2xl": { "$type": "fontSize", "$value": "24px" },
      "3xl": { "$type": "fontSize", "$value": "30px" },
      "4xl": { "$type": "fontSize", "$value": "36px" },
      "5xl": { "$type": "fontSize", "$value": "48px" }
    },
    "lineHeight": {
      "tight": { "$type": "lineHeight", "$value": 1.1, "$description": "Display headings" },
      "snug": { "$type": "lineHeight", "$value": 1.25, "$description": "Compact UI text" },
      "normal": { "$type": "lineHeight", "$value": 1.5, "$description": "Body text" }
    },
    "letterSpacing": {
      "display": { "$type": "letterSpacing", "$value": "0.08em", "$description": "Cinematic headings" },
      "caps": { "$type": "letterSpacing", "$value": "0.12em", "$description": "All-caps labels" },
      "normal": { "$type": "letterSpacing", "$value": "0em" }
    }
  },

  "space": {
    "0": { "$type": "dimension", "$value": "0px" },
    "1": { "$type": "dimension", "$value": "4px" },
    "2": { "$type": "dimension", "$value": "8px" },
    "3": { "$type": "dimension", "$value": "12px" },
    "4": { "$type": "dimension", "$value": "16px" },
    "5": { "$type": "dimension", "$value": "20px" },
    "6": { "$type": "dimension", "$value": "24px" },
    "8": { "$type": "dimension", "$value": "32px" },
    "10": { "$type": "dimension", "$value": "40px" },
    "12": { "$type": "dimension", "$value": "48px" },
    "16": { "$type": "dimension", "$value": "64px" },
    "20": { "$type": "dimension", "$value": "80px" },
    "24": { "$type": "dimension", "$value": "96px" }
  },

  "radius": {
    "none": { "$type": "dimension", "$value": "0px" },
    "sm": { "$type": "dimension", "$value": "8px" },
    "md": { "$type": "dimension", "$value": "12px" },
    "lg": { "$type": "dimension", "$value": "16px" },
    "xl": { "$type": "dimension", "$value": "20px" },
    "2xl": { "$type": "dimension", "$value": "24px" },
    "full": { "$type": "dimension", "$value": "9999px" }
  },

  "border": {
    "width": {
      "hairline": { "$type": "dimension", "$value": "1px" },
      "thin": { "$type": "dimension", "$value": "2px" },
      "medium": { "$type": "dimension", "$value": "3px" }
    }
  },

  "opacity": {
    "subtle": { "$type": "opacity", "$value": 0.12 },
    "muted": { "$type": "opacity", "$value": 0.24 },
    "medium": { "$type": "opacity", "$value": 0.48 },
    "strong": { "$type": "opacity", "$value": 0.72 },
    "opaque": { "$type": "opacity", "$value": 1.0 }
  },

  "blur": {
    "none": { "$type": "dimension", "$value": "0px" },
    "sm": { "$type": "dimension", "$value": "8px" },
    "surface": { "$type": "dimension", "$value": "14px" },
    "popover": { "$type": "dimension", "$value": "20px" },
    "lg": { "$type": "dimension", "$value": "32px" }
  },

  "shadow": {
    "surface": {
      "$type": "shadow",
      "$value": [
        { "color": "rgba(0,0,0,0.55)", "offsetX": "0px", "offsetY": "10px", "blur": "30px", "spread": "-12px" },
        { "color": "rgba(214,160,74,0.10)", "offsetX": "0px", "offsetY": "0px", "blur": "18px", "spread": "0px" }
      ],
      "$description": "Standard card/surface elevation with warm glow"
    },
    "raised": {
      "$type": "shadow",
      "$value": [
        { "color": "rgba(0,0,0,0.65)", "offsetX": "0px", "offsetY": "18px", "blur": "48px", "spread": "-18px" },
        { "color": "rgba(230,189,115,0.12)", "offsetX": "0px", "offsetY": "0px", "blur": "22px", "spread": "0px" }
      ],
      "$description": "Elevated modals/popovers with cinematic depth"
    },
    "glow": {
      "$type": "shadow",
      "$value": [
        { "color": "rgba(214,160,74,0.25)", "offsetX": "0px", "offsetY": "0px", "blur": "24px", "spread": "0px" }
      ],
      "$description": "Accent glow for focus states"
    },
    "inset": {
      "$type": "shadow",
      "$value": [
        { "color": "rgba(0,0,0,0.35)", "offsetX": "0px", "offsetY": "2px", "blur": "8px", "spread": "0px", "inset": true }
      ],
      "$description": "Pressed/inset state"
    }
  },

  "motion": {
    "duration": {
      "instant": { "$type": "duration", "$value": "0ms" },
      "fast": { "$type": "duration", "$value": "120ms" },
      "base": { "$type": "duration", "$value": "200ms" },
      "slow": { "$type": "duration", "$value": "320ms" },
      "slower": { "$type": "duration", "$value": "480ms" }
    },
    "easing": {
      "linear": { "$type": "cubicBezier", "$value": [0.0, 0.0, 1.0, 1.0] },
      "standard": { "$type": "cubicBezier", "$value": [0.2, 0.0, 0.0, 1.0], "$description": "Default easing" },
      "emphasized": { "$type": "cubicBezier", "$value": [0.2, 0.0, 0.0, 1.2], "$description": "Overshoot for emphasis" },
      "decelerate": { "$type": "cubicBezier", "$value": [0.0, 0.0, 0.2, 1.0], "$description": "Enter transitions" },
      "accelerate": { "$type": "cubicBezier", "$value": [0.4, 0.0, 1.0, 1.0], "$description": "Exit transitions" }
    }
  }
}
