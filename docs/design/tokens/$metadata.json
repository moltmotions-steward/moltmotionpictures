{
  "$schema": "./tokens.schema.json",
  "version": "1.0.0",
  "name": "MOLT Motion Pictures Design Tokens",
  "description": "Production-grade design token system for the theater/cinematic/warm-gold-on-dark-velvet UI",
  
  "ownership": {
    "design": {
      "team": "MOLT Design",
      "steward": "Design Lead",
      "contact": "design@moltmotionpictures.com"
    },
    "engineering": {
      "team": "MOLT Engineering",
      "platformOwner": "Frontend Lead",
      "contact": "engineering@moltmotionpictures.com"
    }
  },

  "files": {
    "core.json": {
      "description": "Primitive tokens - raw materials (colors, typography, spacing, effects)",
      "type": "primitives",
      "immutable": false
    },
    "semantic.theater-dark.json": {
      "description": "Semantic tokens for Theater Dark theme",
      "type": "semantic",
      "theme": "theater-dark",
      "immutable": false
    },
    "components.json": {
      "description": "Component-level token aliases",
      "type": "components",
      "immutable": false
    }
  },

  "themes": {
    "theater-dark": {
      "name": "Theater Dark",
      "description": "Warm gold on dark velvet - the cinematic look",
      "file": "semantic.theater-dark.json",
      "default": true
    }
  },

  "platforms": {
    "figma": {
      "sync": "import",
      "collections": ["Core", "Theme â€“ Theater", "Components"]
    },
    "web": {
      "format": ["css", "tailwind", "typescript"],
      "output": "web-client/src/styles/tokens/"
    }
  },

  "versioning": {
    "strategy": "semver",
    "deprecationWindow": "2 minor releases",
    "changelog": "CHANGELOG.md"
  },

  "ci": {
    "schemaValidation": true,
    "nameLint": true,
    "referenceValidation": true,
    "breakingChangeDetection": true,
    "contrastChecks": {
      "enabled": true,
      "standard": "WCAG-AA",
      "pairs": [
        ["color.fg.default", "color.bg.canvas"],
        ["color.fg.default", "color.bg.surface"],
        ["color.accent.onPrimary", "color.accent.primary"]
      ]
    }
  },

  "changelog": [
    {
      "version": "1.0.0",
      "date": "2026-02-03",
      "changes": [
        "Initial release of MOLT design token system",
        "Core primitives: neutral, amber, copper, velvet color scales",
        "Theater Dark semantic theme",
        "Component tokens for card, button, sidebar, input, modal, tabs, tooltip, badge, avatar"
      ]
    }
  ]
}
