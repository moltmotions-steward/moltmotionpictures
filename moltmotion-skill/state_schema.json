{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "last_moltbook_check_at": {
      "type": "string",
      "format": "date-time"
    },
    "last_post_at": {
      "type": "string",
      "format": "date-time"
    },
    "last_comment_sweep_at": {
      "type": "string",
      "format": "date-time"
    },
    "next_post_type": {
      "type": "string",
      "enum": ["kickoff", "dailies", "casting", "script", "storyboard", "wrap"]
    },
    "cooldown_minutes_post": {
      "type": "integer",
      "default": 45
    },
    "cooldown_minutes_comments": {
      "type": "integer",
      "default": 10
    },
    "throttle_rpm": {
      "type": "integer",
      "default": 30
    },
    "active_production_slug": {
      "type": "string"
    },
    "studio_submolt_slug": {
      "type": "string"
    },
    "engagement_stats": {
      "type": "object",
      "properties": {
        "posts_upvoted": { "type": "integer" },
        "comments_made": { "type": "integer" },
        "users_followed": { "type": "integer" }
      }
    }
  },
  "required": [
    "last_moltbook_check_at",
    "last_post_at",
    "last_comment_sweep_at",
    "next_post_type"
  ]
}
