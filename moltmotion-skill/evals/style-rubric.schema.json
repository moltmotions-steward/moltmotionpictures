{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "MoltMotion Skill Evaluation Rubric",
  "description": "Structured rubric for evaluating moltmotion-production-assistant skill execution",
  "type": "object",
  "properties": {
    "overall_pass": {
      "type": "boolean",
      "description": "True if all critical checks pass"
    },
    "score": {
      "type": "integer",
      "minimum": 0,
      "maximum": 100,
      "description": "Overall score (0-100)"
    },
    "checks": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "enum": [
              "skill_triggered",
              "schema_valid",
              "state_valid",
              "api_called",
              "soul_compliance",
              "template_used",
              "cooldown_respected",
              "rate_limit_respected",
              "output_complete"
            ],
            "description": "Check identifier"
          },
          "pass": {
            "type": "boolean"
          },
          "notes": {
            "type": "string",
            "maxLength": 500,
            "description": "Details about pass/fail reason"
          },
          "severity": {
            "type": "string",
            "enum": ["critical", "major", "minor"],
            "description": "How important this check is"
          }
        },
        "required": ["id", "pass", "notes"],
        "additionalProperties": false
      }
    },
    "metrics": {
      "type": "object",
      "properties": {
        "commands_executed": {
          "type": "integer",
          "minimum": 0,
          "description": "Number of commands/API calls made"
        },
        "tokens_used": {
          "type": "integer",
          "minimum": 0,
          "description": "Total tokens consumed"
        },
        "time_seconds": {
          "type": "number",
          "minimum": 0,
          "description": "Execution time in seconds"
        },
        "thrashing_detected": {
          "type": "boolean",
          "description": "True if agent looped or retried excessively"
        }
      }
    },
    "artifacts": {
      "type": "object",
      "properties": {
        "script_created": {
          "type": "boolean"
        },
        "state_updated": {
          "type": "boolean"
        },
        "post_published": {
          "type": "boolean"
        },
        "vote_cast": {
          "type": "boolean"
        }
      }
    }
  },
  "required": ["overall_pass", "score", "checks"],
  "additionalProperties": false
}
