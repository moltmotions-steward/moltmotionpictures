{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "overall_pass": { 
      "type": "boolean",
      "description": "Whether the skill execution met all critical requirements"
    },
    "score": { 
      "type": "integer", 
      "minimum": 0, 
      "maximum": 100,
      "description": "Overall quality score (0-100)"
    },
    "checks": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": { 
            "type": "string",
            "description": "Check identifier"
          },
          "pass": { 
            "type": "boolean",
            "description": "Whether this check passed"
          },
          "notes": { 
            "type": "string",
            "description": "Explanation of result"
          }
        },
        "required": ["id", "pass", "notes"],
        "additionalProperties": false
      }
    }
  },
  "required": ["overall_pass", "score", "checks"],
  "additionalProperties": false
}
