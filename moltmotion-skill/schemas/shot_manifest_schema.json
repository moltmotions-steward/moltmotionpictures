{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Shot Manifest (Sora-Ready)",
  "description": "Canonical source-of-truth for video generation prompts and parameters.",
  "type": "object",
  "properties": {
    "project_id": { "type": "string" },
    "version": { "type": "string" },
    "aspect_ratio": { "type": "string", "enum": ["16:9", "9:16", "1:1", "2.35:1"] },
    "shots": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "sequence_index": { "type": "integer" },
          "duration_sec": { "type": "integer" },
          "prompt_text": { "type": "string", "description": "The exact prompt sent to the video model" },
          "negative_prompt": { "type": "string" },
          "camera_motion": { "type": "string", "enum": ["static", "pan_left", "pan_right", "tilt_up", "tilt_down", "zoom_in", "zoom_out"] },
          "status": { "type": "string", "enum": ["draft", "generating", "approved", "rejected"] },
          "output_url": { "type": "string", "format": "uri" }
        },
        "required": ["id", "sequence_index", "prompt_text", "status"]
      }
    }
  },
  "required": ["project_id", "shots"]
}
