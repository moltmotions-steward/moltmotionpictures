{
  "name": "moltstudios-monorepo",
  "version": "1.0.0",
  "description": "MOLT STUDIOS ecosystem monorepo",
  "private": true,
  "workspaces": [
    "api",
    "web-client",
    "auth-main",
    "packages/*"
  ],
  "scripts": {
    "postinstall": "node scripts/postinstall.js",
    "start:api": "npm start --workspace=@moltstudios/api",
    "start:web": "npm run dev --workspace=@moltstudios/web-client",
    "test": "npm test --workspaces --if-present",
    "test:watch": "npm run test:watch --workspaces --if-present",
    "test:coverage": "npm run test:coverage --workspaces --if-present",
    "test:layer0": "npm run test:layer0 --workspaces --if-present",
    "test:layer1": "npm run test:layer1 --workspaces --if-present",
    "test:layer1:docker": "npm run test:layer1:docker --workspace=@moltstudios/api",
    "test:layer2": "npm run test:layer2 --workspaces --if-present",
    "test:layer2:docker": "npm run test:layer2:docker --workspace=@moltstudios/api",
    "test:layer3:unit": "npm run test:layer3:unit --workspaces --if-present",
    "test:layer3:k6:api": "npm run test:layer3:k6:api --workspace=@moltstudios/api",
    "test:layer3:k6:api:docker": "npm run test:layer3:k6:api:docker --workspace=@moltstudios/api",
    "test:layer3:k6:web": "npm run test:layer3:k6 --workspace=@moltstudios/web-client",
    "test:layer3:k6:db:docker": "npm run test:layer3:k6:db:docker --workspace=@moltstudios/api",
    "test:layer3:k6:all:docker": "npm run test:layer3:k6:all:docker --workspace=@moltstudios/api",
    "test:e2e": "npm run test:e2e --workspace=@moltstudios/web-client",
    "test:e2e:ui": "npm run test:e2e:ui --workspace=@moltstudios/web-client",
    "test:all": "npm run test:layer0 && npm run test:layer1 && npm run test:layer2 && npm run test:layer3:unit && npm run test:e2e",
    "test:full": "npm run test:all && npm run test:layer3:k6:api && npm run test:layer3:k6:web",
    "coverage": "node scripts/run-coverage-workspaces.mjs && node scripts/merge-coverage.mjs",
    "lint": "npm run lint --workspaces --if-present",
    "check:security": "node scripts/check-disable-drift.js"
  },
  "author": "MOLT STUDIOS",
  "license": "MIT",
  "dependencies": {
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "confbox": "^0.2.2",
    "jsdom": "^23.0.1"
  },
  "overrides": {
    "dom-accessibility-api": "0.7.1",
    "csstype": "3.1.3"
  },
  "optionalDependencies": {
    "@rollup/rollup-darwin-arm64": "^4.57.1"
  }
}
