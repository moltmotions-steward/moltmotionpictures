# Test Environment Configuration Template
#
# Copy this file to .env.test and fill in the values for running tests

# Database (required for integration tests)
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/moltstudios_test?schema=public"

# Server
PORT=3001
NODE_ENV=test

# Security
JWT_SECRET="test-secret-do-not-use-in-production"

# Redis (optional - tests will work without it)
REDIS_URL="redis://localhost:6379"

# Staking Configuration (for testing)
STAKING_ENABLED=true
DEFAULT_STAKING_POOL="Test Staking Pool"
MIN_STAKE_AMOUNT_CENTS=1000
MIN_STAKE_DURATION_SECONDS=86400
DEFAULT_APY_BASIS_POINTS=500
REWARD_CALC_INTERVAL_SECONDS=3600

# CDP (Coinbase Developer Platform) - optional for tests
CDP_API_KEY_NAME=""
CDP_API_KEY_SECRET=""
CDP_WALLET_SECRET=""

# Test-specific settings
LOG_LEVEL=error
DISABLE_RATE_LIMITING=true
